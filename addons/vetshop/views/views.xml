<odoo>
  <data>
<!--Pet list view-->
    <record model="ir.ui.view" id="view_pet_list">
      <field name="name">vetshop.pet.list</field>
      <field name="model">vetshop.pet</field>
      <field name="arch" type="xml">
        <list>
          <field name="name"/>
          <field name="species_id"/>
          <field name="age"/>
          <field name="weight"/>
          <field name="chip_code"/>
          <field name="owner_id"/>
        </list>
      </field>
    </record>

    <record model="ir.ui.view" id="view_pet_form">
      <field name="name">vetshop.pet.form</field>
      <field name="model">vetshop.pet</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <group string="Datos Principales">
                <field name="name"/>
                <field name="species_id"/> 
                <field name="chip_code"/>
              </group>
              <group string="Detalles">
                <field name="owner_id"/>
                <field name="age"/>
                <field name="weight"/>
              </group>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record model="ir.actions.act_window" id="action_pet">
      <field name="name">Mascotas</field>
      <field name="res_model">vetshop.pet</field>
      <field name="view_mode">list,form</field>
    </record>


    <record model="ir.ui.view" id="view_sale_order_list">
      <field name="name">vetshop.sale_order.list</field>
      <field name="model">vetshop.sale_order</field>
      <field name="arch" type="xml">
        <list>
          <field name="code"/>
          <field name="pet_id"/>
          <field name="total_price"/>
          <field name="state"/>
        </list>
      </field>
    </record>

    <record model="ir.ui.view" id="view_sale_order_form">
      <field name="name">vetshop.sale_order.form</field>
      <field name="model">vetshop.sale_order</field>
      <field name="arch" type="xml">
        <form>
          <header>
              <field name="state" widget="statusbar"/>
          </header>
          <sheet>
            <div class="oe_title">
                <h1>
                    <field name="code"/>
                </h1>
            </div>
            <group>
              <group>
                <field name="pet_id"/>
                <field name="total_price"/>
                <field name="state"/>
              </group>
              <group>
                <field name="product_ids" widget="many2many_tags"/>
              </group>
            </group>
            <notebook>
                <page string="Productos">
                    <field name="product_ids"/>
                </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>

    <record model="ir.actions.act_window" id="action_sale_order">
      <field name="name">Ventas</field>
      <field name="res_model">vetshop.sale_order</field>
      <field name="view_mode">list,form</field>
    </record>


    <menuitem name="VetShop" id="menu_root"/>
    <menuitem name="ClÃ­nica" id="menu_clinic" parent="menu_root" sequence="10"/>
    <menuitem name="Tienda" id="menu_shop" parent="menu_root" sequence="20"/>
    <menuitem name="Mascotas" id="menu_pet" parent="menu_clinic" action="action_pet"/>
    <menuitem name="Pedidos de Venta" id="menu_sale_order" parent="menu_shop" action="action_sale_order"/>

  </data>
</odoo>