<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_person_list" model="ir.ui.view">
        <field name="name">site.management.person.list</field>
        <field name="model">site.management.person</field>
        <field name="arch" type="xml">
            <list string="Persons">
                <field name="name"/>
                <field name="site_id"/>
                <field name="phone"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_person_form" model="ir.ui.view">
        <field name="name">site.management.person.form</field>
        <field name="model">site.management.person</field>
        <field name="arch" type="xml">
            <form string="Person">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="site_id"/>
                            <field name="active"/>
                        </group>
                        <group>
                        
                            <field name="phone"/>
                            <field name="birth_date"/>
                        </group>
                    </group>
                    <group string="Notes">
                        <field name="notes" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_person" model="ir.actions.act_window">
        <field name="name">Persons</field>
        <field name="res_model">site.management.person</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
